<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SistemadeGestiónHospitalariaWebProyecto</title>
    <script type="importmap"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemadeGestiónHospitalariaWebProyecto.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/2.2.2/css/dataTables.dataTables.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/2.2.2/js/dataTables.js"></script>
</head>
<body>
    <div class="main-wrapper">
        <div id="sidebar-nav">
            <br><br><br><br>
            <!-- Botón de alternancia de modo oscuro/claro -->
            <!-- Botón de alternancia de modo oscuro/claro -->
            <!-- Botón de alternancia de modo oscuro -->
            <div class="form-check form-switch position-fixed top-0 end-0 m-3 z-index-5">
                <input class="form-check-input" type="checkbox" id="darkModeToggle">
                <label class="form-check-label" for="darkModeToggle">
                    <i class="fas fa-moon"></i>
                </label>
            </div>


            <ul>
                <li><a href="/Home/Index"><i class="fa fa-home"></i> Menú Principal</a></li>
                <li><a href="/Pacientes/Index"><i class="fa fa-wheelchair"></i> Pacientes</a></li>
                <li><a href="/Medicos/Index"><i class="fa fa-user-md"></i> Médicos</a></li>
                <li><a href="/Especialidad/Index"><i class="fas fa-tablets"></i> Especialidades</a></li>
                <li><a href="/Citas/Index"><i class="fas fa-notes-medical"></i> Citas</a></li>
                <li><a href="/Tratamientos/Index"><i class="fas fa-syringe"></i> Tratamientos</a></li>
                <li><a href="/Facturacion/Index"><i class="fas fa-money-check-alt"></i> Facturación</a></li>
            </ul>
        </div>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Script para manejar el cambio de tema -->
    <script>
        // Función para aplicar el tema según la preferencia almacenada
        function applyTheme(theme) {
            if (theme === 'dark') {
                document.documentElement.setAttribute('data-bs-theme', 'dark');
                document.body.classList.add('modo-oscuro');
                document.getElementById('darkModeToggle').checked = true;
            } else {
                document.documentElement.setAttribute('data-bs-theme', 'light');
                document.body.classList.remove('modo-oscuro');
                document.getElementById('darkModeToggle').checked = false;
            }
        }

        // Obtener la preferencia de tema del usuario al cargar la página
        const storedTheme = localStorage.getItem('theme') || 'light';
        applyTheme(storedTheme);

        // Escuchar cambios en el interruptor y actualizar el tema
        document.getElementById('darkModeToggle').addEventListener('change', function(event) {
            const theme = event.target.checked ? 'dark' : 'light';
            applyTheme(theme);
            // Guardar la preferencia del usuario en localStorage
            localStorage.setItem('theme', theme);
        });
    </script>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
